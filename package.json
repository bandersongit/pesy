{
  "name": "pesy",
  "version": "0.5.0-alpha.3",
  "description": "\"Esy Pesy\" - Your Esy Assistant.",
  "esy": {
    "build": [
      "refmterr dune build -p #{self.name}"
    ],
    "buildsInSource": "_build",
    "release": {
      "bin": [
        "pesy"
      ],
      "includePackages": [
        "root"
      ]
    }
  },
  "buildDirs": {
    "bin": {
      "bin": {
        "pesy": "Pesy.re"
      },
      "require": [
        "pesy/lib",
        "pesy/utils",
        "cmdliner"
      ]
    },
    "lib": {
      "require": [
        "str",
        "sexplib",
        "yojson",
        "ppx_inline_test/runtime-lib",
        "pesy/utils"
      ],
      "preprocess": [
        "pps",
        "ppx_expect",
        "ppx_inline_test"
      ],
      "flags": [
        "-w",
        "-33+9"
      ],
      "rawBuildConfig": [
        "(inline_tests (flags -verbose))"
      ]
    },
    "utils": {
      "require": [
        "unix",
        "str",
        "pastel/lib"
      ],
      "flags": [
        "-w",
        "-6"
      ],
      "preprocess": [
        "pps",
        "ppx_expect",
        "ppx_inline_test"
      ],
      "rawBuildConfig": [
        "(inline_tests (flags -verbose))"
      ]
    }
  },
  "scripts": {
    "test": "esy dune runtest"
  },
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/bos": "*",
    "@opam/cmdliner": "1.0.3",
    "@opam/dune": "*",
    "@opam/fpath": "*",
    "@opam/ppx_expect": "v0.11.1",
    "@opam/ppx_inline_test": "v0.11.0",
    "@opam/sexplib": "v0.11.0",
    "@opam/yojson": "^1.4.1",
    "@reason-native/pastel": "^0.2.0",
    "dune": "^0.2.1",
    "ocaml": "*",
    "refmterr": "*"
  },
  "devDependencies": {
    "@opam/merlin": "*"
  },
  "resolutions": {
    "@reason-native/pastel": "facebookexperimental/reason-native#028b0973b0268530609c3edfa4b4f3ebbf9fbb43"
  }
}
